                <div class="w60">
                    {{ form_widget(articleForm.title, {'attr' : {'class'  : 'form-control', 'placeholder' : 'Titre de l\'article'}}) }}
                </div>
            </div>
            <div >
                {{ form_errors(articleForm.title) }}
            </div>


            {{ form_label(articleForm.content, 'Contenu :', {'label_attr' : {'class'  : 'label'}}) }}
            <div class="d-flex justify-content-center">
                <div class="w60">
                    {{ form_widget(articleForm.content, {'attr' : {'class'  : 'form-control', 'placeholder' : 'Contenu de l\'article'}}) }}
                </div>
            </div>
            <div>
                {{ form_errors(articleForm.content) }}
            </div>


        <div>
            {{ form_label(articleForm.createdAt, 'Date de création :', {'label_attr' : {'class'  : 'label'}}) }}
            <div>
                {{ form_widget(articleForm.createdAt, {'attr' : {'class'  : ''}}) }}
            </div>

        </div>


            <div>
                {{ form_label(articleForm.category, 'Catégorie :', {'label_attr' : {'class'  : 'label'}}) }}
                <div>
                    {{ form_widget(articleForm.category, {'attr' : {'class'  : ''}}) }}
                </div>

            </div>

            <div>
                {{ form_label(articleForm.tag, 'Étiquette :', {'label_attr' : {'class'  : 'label'}}) }}
                <div>
                    {{ form_widget(articleForm.tag, {'attr' : {'class'  : ''}}) }}
                </div>

            </div>


            {{ form_label(articleForm.isPublished, 'Etat de publication :', {'label_attr' : {'class'  : 'label'}}) }}
            <div>
                {{ form_widget(articleForm.isPublished, {'attr' : {'class'  : 'form-check-input'}}) }}
            </div>


            <div>
                {{ form_widget(articleForm.submit, {'attr' : {'class'  : 'btn btn-primary my-3'}, 'label': 'Enregister'}) }}
            </div>


            {{ form_end(articleForm) }}


        </div>
    </div>
{% endblock main %}

{% block footer %}
    <p>
        Merci d'ajouter des articles.
