{%  extends 'admin/base.html.twig' %}

{% block metaTitle %}
    Les articles du journal
{% endblock metaTitle %}

{% block main %}
    <div class="container">
        {% for message in app.flashes('notice') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}
        {% for article in articles %}
            <div class="row">
                <h1 style="color: {{ article.tag.color }}">
                    <a href="{{ path('admin_article_show', {'id' : article.id } ) }}">{{ article.title }}</a>
                </h1>
                <h2>
                    Ecrit le :  {{ article.createdAt | date('d-m-y') }}
                </h2>
                <a href="{{ path('admin_article_delete', {'id' : article.id} ) }}" class="delete">Supprimer l'article</a>
                <a href="{{ path('admin_article_update', {'id' : article.id} ) }}" class="update">Modifier l'article</a>
            </div>
        {% endfor %}
    </div>

{% endblock main %}

{% block footer %}
    <a href="{{ path('admin_article_insert') }}" class="add">Ajouter des articles</a>
{% endblock footer %}