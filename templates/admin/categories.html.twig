{%  extends 'admin/base.html.twig' %}

{% block metaTitle %}
    Les catégories du journal
{% endblock metaTitle %}

{% block main %}
    <div class="container">
        {% for message in app.flashes('notice') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}
        {% for categorie in list %}
            <div class="row">
                <h1>
                    {{ categorie.title }}
                </h1>
                <h2>
                    {{ categorie.description }}
                </h2>
                <a href="{{ path('admin_categorie_delete', {'id' : categorie.id} ) }}" class="delete">Supprimer la catégorie</a>
                <a href="{{ path('admin_categorie_update', {'id' : categorie.id} ) }}" class="update">Modifier la catégorie</a>
            </div>
        {% endfor %}
    </div>

{% endblock main %}

{% block footer %}
    <a href="{{ path('admin_categorie_insert') }}" class="add">Ajouter des catégories</a>
{% endblock footer %}