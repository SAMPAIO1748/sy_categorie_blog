{% extends 'admin/base.html.twig' %}

{% block metaTitle %}
    Ajout de catégories
{% endblock metaTitle %}

{% block main %}
    <div class="container-fluid">
        <div class="row tag w95">
            <h1>Vous pouvez rajouter une catégorie</h1>
            {# <form action="{{ path('admin_categorie_insert') }}" method="post" class="form">
                <input type="text" name="title" class="input" placeholder="Entrer le titre de la catégorie">
                <textarea name="description" id="content" cols="30" rows="10" class="input" placeholder="Entrer la description de la catégorie"></textarea>
                <input type="submit" value="Ajouter" class="button">
            </form> #}

            {{ form_start(categoryForm) }}

            <div>
                {{ form_label(categoryForm.title, 'Titre :', {'label_attr' : {'class'  : 'label'}}) }}
            </div>

            <div>
                {{ form_widget(categoryForm.title, {'attr' : {'class'  : 'input', 'placeholder' : 'Titre de la catégorie'}}) }}
            </div>

            <div>
                {{ form_errors(categoryForm.title) }}
            </div>

            <div>
                {{ form_label(categoryForm.description, 'Description :', {'label_attr' : {'class'  : 'label'}}) }}
            </div>

            <div>
                {{ form_widget(categoryForm.description, {'attr' : {'class'  : 'input', 'placeholder' : 'Description de la catégorie'}}) }}
            </div>

            <div>
                {{ form_errors(categoryForm.description) }}
            </div>

            <div>
                {{ form_widget(categoryForm.submit, {'attr' : {'class'  : 'button'}, 'label': 'Enregister'}) }}
            </div>

            {{ form_end(categoryForm) }}
        </div>
    </div>
{% endblock main %}

{% block footer %}
    <p>
        Merci d'ajouter des catégories.
    </p>
{% endblock footer %}