{% extends 'admin/base.html.twig' %}

{% block metaTitle %}
    Modification de l'étiquette n°{{ tag.id }}
{% endblock metaTitle %}

{% block main %}
    <div class="container-fluid">
        <div class="row tag w95">
            <h1>Vous pouvez modifier l'étiquette {{ tag.title }}</h1>
            <form action="{{ path('admin_tag_save', {'id' : tag.id}) }}" method="post" class="form">
                <input type="text" name="title" class="input" placeholder="Entrer le titre de l'étiquette" value="{{ tag.title }}">
                <input type="text" name="color" class="input" placeholder="Entrer la couleur de l'étiquette" value="{{ tag.color }}">
                <input type="submit" value="Enregistrer" class="button">
            </form>
        </div>
    </div>
{% endblock main %}

{% block footer %}
    <p>
        Merci de modifier des étiquettes.
    </p>
{% endblock footer %}