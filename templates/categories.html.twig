{%  extends 'base.html.twig' %}

{% block metaTitle %}
    Les catégories du journal
{% endblock metaTitle %}

{% block header %}
    Les catégories de la mort qui tue
{% endblock header %}

{% block main %}
    <div class="container">
        {% for category in list %}
            {% if category.published %}
            <div class="row">
                <h1>
                   <a href="{{ path('categoryShow', {'id' : category.id}) }}">{{ category.title }}</a>
                </h1>
                <h2>
                    {{ category.content }}
                </h2>
            </div>
            {% endif %}
        {% endfor %}
    </div>

{% endblock main %}

{% block footer %}
    <p>
       Vous avez lu les catégories de la mort qui tue du journal de la Piscine
    </p>
{% endblock footer %}