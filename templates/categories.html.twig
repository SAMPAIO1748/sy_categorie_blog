{%  extends 'base.html.twig' %}

{% block metaTitle %}
    Les catégories du journal
{% endblock metaTitle %}

{% block header %}
    Les catégories de la mort qui tue
{% endblock header %}

{% block main %}
    <div class="container">
        {% for categorie in list %}
            {% if categorie.published %}
            <div class="row">
                <h1>
                   <a href="{{ path('categorieShow', {'id' : categorie.id}) }}">{{ categorie.title }}</a>
                </h1>
                <h2>
                    {{ categorie.content }}
                </h2>
            </div>
            {% endif %}
        {% endfor %}
    </div>

{% endblock main %}

{% block footer %}
    <p>
       Vous avez lu les catégories publiées de la mort qui tue du journal de la Piscine
    </p>
{% endblock footer %}