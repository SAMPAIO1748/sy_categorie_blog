{% extends 'base.html.twig' %}

{% block metaTitle %}
    Modification de la catégorie n°{{ category.id }}
{% endblock metaTitle %}

{% block main %}
    <div class="container-fluid">
        <div class="row tag w95">
            <h1>Vous pouvez modifier la catégorie {{ category.title }}</h1>
            <form action="{{ path('categorySave', {'id' : category.id}) }}" method="post" class="form">
                <input type="text" name="title" class="input" placeholder="Entrer le titre de la category" value="{{ category.title }}">
                <textarea name="description" id="description" cols="30" rows="10" class="input" placeholder="Entrer la description de la categorie">{{ category.description }}</textarea>
                <input type="submit" value="Enregistrer" class="button">
            </form>
        </div>
    </div>
{% endblock main %}

{% block footer %}
    <p>
        Merci de modifier des categoriess.
    </p>
{% endblock footer %}