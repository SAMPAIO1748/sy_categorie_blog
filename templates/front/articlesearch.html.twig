{% extends 'front/base.html.twig' %}

{% block metaTitle %}
    Recherche de {{ term }}
{% endblock metaTitle %}

{% block main %}
    <div class="container-fluid">
        <div class="row tag w95">
            <h1>Voici les articles qui correspondent à la recherche :  {{ term }}</h1>
            <h2 class="underligne">Liste des comics : </h2>
            {% for article in articles %}
                <a href="{{ path('article_show', {'id' : article.id}) }}"><h3 style="color : {{ article.tag.color }}">{{ article.title }}</h3></a>
            {% endfor %}
        </div>
    </div>
{% endblock main %}

{% block footer %}
    <p>
        Vous avez lu les articles du journal de la piscine qui correspondent à la recherche :  {{ term }}
    </p>
{% endblock footer %}