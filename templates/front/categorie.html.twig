{% extends 'front/base.html.twig' %}

{% block metaTitle %}
    La catégorie n°{{ categorie.id }}
{% endblock metaTitle %}

{% block main %}
    <div class="container-fluid">
    <div class="row">
        <h1>{{ categorie.title }}</h1>
        <h2>{{ categorie.description }}</h2>
        <h2 class="underligne">Liste des comics : </h2>
        {% for article in categorie.articles %}
            <a href="{{ path('article_show', {'id' : article.id}) }}"><h3 style="color: {{ article.tag.color }}">{{ article.title }}</h3></a>
        {% endfor %}
    </div>
    </div>
{% endblock main %}


{% block footer %}
        <p>Bonjour</p>
{% endblock footer %}