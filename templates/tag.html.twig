{% extends 'base.html.twig' %}

{% block metaTitle %}
    Le tag n°{{ tag.id }}
{% endblock metaTitle %}

{% block main %}
    <div class="container-fluid">
        <div class="row tag">
            <h1>{{ tag.title }}</h1>
            <h2 style="color : {{ tag.color }}">
                Couleur du tag :  {{ colors[tag.color] }}
            </h2>
            <h2>Liste des comics : </h2>
            {% for article in tag.articles %}
                <a href="{{ path('articleShow', {'id' : article.id}) }}"><h3>{{ article.title }}</h3></a>
            {% endfor %}
        </div>
    </div>
{% endblock main %}

{% block footer %}
    <p>
        Vous avez lu l'étiquette n°{{ tag.id }} du journal de la mort qui tue de la Piscine
    </p>
{% endblock footer %}